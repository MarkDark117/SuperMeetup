<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout style="@style/div"
        android:layout_height="100dp"
        android:layout_marginBottom="1dp"
        android:gravity="bottom">

        <ImageView
            android:id="@+id/event_image"
            style="@style/div"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"/>

        <RelativeLayout
            style="@style/div.vlist"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="left|center_vertical"
            android:paddingTop="@dimen/margin_mid"
            android:paddingBottom="@dimen/margin_mid"
            android:paddingLeft="@dimen/margin_normal"
            android:paddingRight="@dimen/margin_normal"
            android:background="#efffffff">

            <LinearLayout
                android:id="@+id/event_address_layout"
                style="@style/div.hlist"
                android:gravity="top"
                android:layout_alignParentBottom="true" >

                <ImageView
                    android:layout_width="@dimen/icon_tiny"
                    android:layout_height="@dimen/icon_tiny"
                    android:src="@mipmap/ic_location"
                    android:tint="@color/colorPrimary"
                    android:layout_marginRight="@dimen/margin_mid"/>
                <TextView
                    android:id="@+id/event_address"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:gravity="top"
                    style="@style/div.p"/>

            </LinearLayout>

            <TextView
                android:id="@+id/event_name"
                style="@style/div.h1"
                android:layout_alignParentTop="true"
                android:gravity="top"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="title"/>

            <LinearLayout
                style="@style/div.hlist"
                android:gravity="bottom"
                android:layout_marginBottom="@dimen/margin_mid"
                android:layout_below="@id/event_name"
                android:layout_above="@id/event_address_layout">

                <ImageView
                    android:layout_width="@dimen/icon_tiny"
                    android:layout_height="@dimen/icon_tiny"
                    android:src="@mipmap/ic_group"
                    android:tint="@color/teal700"
                    android:layout_marginRight="@dimen/margin_mid"/>
                <TextView
                    android:id="@+id/event_group"
                    style="@style/div.h2"/>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/event_divider"
            style="@style/div.divider"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>
</layout>
